<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:text="123456789012345678901234567890"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewLatLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewName"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/buttonLocate"
        android:text="(-10.00, -20.00)" />

    <TextView
        android:id="@+id/textViewComment"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/buttonLocate"
        android:text="123456789012345678901235678901234567890123456..."
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/buttonLocate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-1dp"
        android:backgroundTint="@android:color/holo_blue_light"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />
</RelativeLayout>
